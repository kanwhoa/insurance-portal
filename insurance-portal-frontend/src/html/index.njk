<% extends "root.njk" %>
<% import "forms.njk" as forms %>

<% block head %>
	<title>PhoneGap App</title>
	<meta name="description" content="This is an example PhoneGap application." />
<% endblock %>

<# This will read the language of the users setup and forward to the
correct index page of languages #>
<% block content %>
<div class="container">
	<div class="row">
		<!-- TODO: macro for grid -->
		<div class="col-xs-12 col-xs-offset-0 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					Insurance Application
				</div>
				<div class="panel-body">
					<% call forms.form('eg') -%>

						<$ forms.input(name='givenName') $>

						<$ forms.input(name='familyName') $>

						<$ forms.radio(name='gender') $>

						<$ forms.input(name='mobilePhone') $>

						<$ forms.date(name='dateOfBirth') $>

						<$ forms.range(name='sumAssured') $>

						<$ forms.label(name='firstPremium') $>

						<#
						<$ forms.button(name='submit', label='Purchase', type='submit', action='purchase') $>
						#>
					<%- endcall %>
				</div>
			</div>
		</div>
	</div>
</div>
<% endblock %>
